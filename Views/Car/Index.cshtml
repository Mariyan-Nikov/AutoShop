
<h1>Cars</h1>

<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Search by brand or model" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Registration Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Cars.Any())
        {
            foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.RegistrationNumber</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No cars found.</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-searchTerm="@Model.SearchTerm"
                       asp-route-currentPage="@i">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
