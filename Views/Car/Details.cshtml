@model AutoShop.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h1>Car Details</h1>

<div>
    <h4>@Model.Brand @Model.Model</h4>
    <hr />
    @if (!string.IsNullOrEmpty(Model.ImageFileName))
    {
        <img src="~/images/@Model.ImageFileName" alt="Car Image" width="300" class="img-thumbnail mb-3" />
    }
    else
    {
        <p class="text-muted">Няма налична снимка</p>
    }

    <dl class="row">
        <dt class="col-sm-2">Марка</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Модел</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Година</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Рег. номер</dt>
        <dd class="col-sm-10">@Model.RegistrationNumber</dd>

        <dt class="col-sm-2">Цена</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<div class="d-flex gap-2 mt-3">
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Редактирай</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Изтрий</a>
    }
    <a asp-controller="Order" asp-action="OrderDocument" asp-route-carId="@Model.Id" class="btn btn-success btn-sm">
        Поръчай тази кола
    </a>
</div>
