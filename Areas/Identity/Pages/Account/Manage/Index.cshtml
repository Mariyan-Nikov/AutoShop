@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container py-5">
    <h2 class="mb-4 text-primary fw-bold">@ViewData["Title"]</h2>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">Update Your Profile</h4>
                </div>
                <div class="card-body p-5">

                    <form id="profile-form" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="Username" disabled />
                            <label asp-for="Username" class="fw-semibold">Username</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.PhoneNumber" class="form-control form-control-lg" placeholder="Phone Number" />
                            <label asp-for="Input.PhoneNumber" class="fw-semibold">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm">
                            Save Changes
                        </button>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4 text-muted small">
                <p>Need help? <a href="mailto:support@example.com" class="text-primary">Contact Support</a></p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Мек плавен hover за бутона */
    #update-profile-button:hover {
        background-color: #004aad !important;
        box-shadow: 0 4px 15px rgba(0, 74, 173, 0.4);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    /* Плавно изчезване на съобщения за грешки */
    .text-danger {
        transition: opacity 0.3s ease-in-out;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
