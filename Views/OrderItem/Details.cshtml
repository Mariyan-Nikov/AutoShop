@model AutoShop.Models.OrderItem
@{
    ViewData["Title"] = "Order Item Details";
}

<h2 class="mb-4">Order Item Details</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Order ID:</strong> @Model.Order.Id</p>
        <p><strong>Car:</strong> @Model.Car.Model</p>
        <p><strong>Quantity:</strong> @Model.Quantity</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mt-3">Edit</a>
<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
