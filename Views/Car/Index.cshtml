@model IEnumerable<AutoShop.Models.Car>

@{
    ViewData["Title"] = "Cars List";
}

<h1>Cars</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Car</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
