@model AutoShop.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer?.FullName</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Order Items</dt>
        <dd class="col-sm-10">
            @if (Model.OrderItems != null && Model.OrderItems.Any())
            {
                <ul>
                    @foreach (var item in Model.OrderItems)
                    {
                        <li>@item.Car.Brand @item.Car.Model - Quantity: @item.Quantity</li>
                    }
                </ul>
            }
            else
            {
                <p>No items in this order.</p>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
