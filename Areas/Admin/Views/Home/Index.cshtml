@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary shadow">
                <div class="card-body">
                    <h5 class="card-title">➕ Добави нова кола</h5>
                    <p class="card-text">Създай нова обява за автомобил.</p>
                    <a href="/Car/Create" class="btn btn-light">
                        <i class="bi bi-plus-circle"></i> Създай нова кола
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <h5 class="card-title">📂 Всички коли</h5>
                    <p class="card-text">Преглед и управление на качените коли.</p>
                    <a href="/Car" class="btn btn-light">Виж коли</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning shadow">
                <div class="card-body">
                    <h5 class="card-title">📋 Категории</h5>
                    <p class="card-text">Управление на категории (SUV, Sedan...)</p>
                    <a href="/Admin/Category/All" class="btn btn-dark">Категории</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-danger shadow">
                <div class="card-body">
                    <h5 class="card-title">🧍 Дилъри</h5>
                    <p class="card-text">Преглед на дилъри/автокъщи</p>
                    <a href="/Admin/Dealer/All" class="btn btn-light">Дилъри</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-dark shadow">
                <div class="card-body">
                    <h5 class="card-title">👥 Потребители</h5>
                    <p class="card-text">Списък с регистрирани потребители.</p>
                    <a href="/Admin/User/All" class="btn btn-secondary">Потребители</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-info shadow">
                <div class="card-body">
                    <h5 class="card-title">⚙️ Настройки</h5>
                    <p class="card-text">Общи настройки на системата.</p>
                    <a href="/Admin/Settings" class="btn btn-light">Настройки</a>
                </div>
            </div>
        </div>
    </div>
</div>
