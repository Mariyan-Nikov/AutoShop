@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <h2 class="mb-4">Contact Us</h2>

    <div class="row">
        <div class="col-md-6 mb-4">
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" class="form-control" id="name" placeholder="John Doe" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Your Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Type your message..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>

        <div class="col-md-6">
            <h5 class="mb-3">Find Us Here:</h5>
            <img src="~/images/autoshop-img.jpg" alt="AutoShop Location Map" style="width:100%; border-radius: 8px; margin-bottom: 20px;" />

            <p><strong>Phone:</strong> 0888 123 456</p>
            <p><strong>Email:</strong> info@autoshop.bg</p>
            <p><strong>Address:</strong> ул. Автомобилна 123, София, България</p>
        </div>
    </div>
</div>
