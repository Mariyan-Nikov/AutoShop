@model AutoShop.Models.OrderItem
@{
    ViewData["Title"] = "Create Order Item";
}

<h2 class="mb-4">Create Order Item</h2>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <select asp-for="OrderId" class="form-select" asp-items="ViewBag.Orders"></select>
    </div>
    <div class="mb-3">
        <label asp-for="CarId" class="form-label"></label>
        <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
