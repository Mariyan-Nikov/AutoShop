@* Admin Layout за AutoShop *@
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoShop Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Собствен CSS за Admin (по избор) -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

            body > header {
                flex-shrink: 0;
            }

        main.container {
            flex: 1 0 auto;
        }

        footer.footer {
            flex-shrink: 0;
        }
    </style>
</head>
<body>
    <!-- Навигационна лента -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Admin/Home/Index">AutoShop Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="adminNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Car/All">Коли</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Category/All">Категории</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Dealer/All">Дилъри</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/User/All">Потребители</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Settings">Настройки</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Identity/Account/Logout">Изход</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Основно съдържание -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer bg-dark text-white mt-auto py-3">
        <div class="container text-center">
            &copy; 2025 - AutoShop Admin Dashboard
        </div>
    </footer>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
