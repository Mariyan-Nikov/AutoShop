@model AutoShop.Models.Category

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Изтрий категория";
}

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <div class="alert alert-danger">
            Сигурни ли сте, че искате да изтриете категория: <strong>@Model.Name</strong>?
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-2"><small>@Model.Description</small></div>
            }
        </div>

        <form asp-area="Admin" asp-controller="Category" asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Изтрий</button>
            <a asp-area="Admin" asp-controller="Category" asp-action="All" class="btn btn-secondary ms-2">Отказ</a>
        </form>
    </div>
</div>
