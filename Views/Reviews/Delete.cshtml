@model AutoShop.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete this review for <strong>@Model.Car.Brand @Model.Car.Model</strong>?
</div>

<div>
    <p><strong>Content:</strong> @Model.Content</p>
    <p><strong>Created On:</strong> @Model.CreatedOn.ToString("dd MMM yyyy HH:mm")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
